<!DOCTYPE html>
<html>

<head>
  <title>MnM</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_include_tag 'ratyrate.js', 'application', 'data-turbolinks-track': 'reload' %>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>

  <%= action_cable_meta_tag %>

</head>
  <body data-spy="scroll" data-target=".navbar">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
            data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
              <!-- Music in Motion logo -->
        <div class="MnM Mobile Installations Corporation navbar-brand nav-logo">
          <%= link_to image_tag("MnM logo.jpg"), root_url %>
        </div> <!--end Music in Motion logo -->

        <%= form_tag("/products", method: "get", id: "search_bar") do %>
          <%= label_tag(:q, "Search for:") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
        <% end %>

        </div> <!--end navbar-header -->
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <% if user_signed_in? %>
                <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              <% else %>
                <%= link_to('Login', new_user_session_path) %>
              <% end %>
            </li>
            <li><%= link_to "Home", root_url %></li>
            <li><%= link_to "About", static_pages_about_path, 'data-turbolinks' => false %></li>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Orders", orders_path %></li>
            <li><%= link_to "Contact", static_pages_contact_path %></li>
          </ul>
        </div> <!-- navbar -->
      </div> <!-- end nav container -->
    </nav> <!-- end navbar-->
    <% if notice %>
      <p id="notice" class="alert alert-info"><%= notice %></p>
    <% end %>
    <%= yield %>

    <footer>
      <div class="footer-logo">
        <%= link_to image_tag("King's Empire logo.png") ,"http://stevendu.bitballoon.com/" %>
      </div>
      <div class="copyright">
        &copy; Steven Du. King's Empire 2016
      </div>
    </footer>

  </body>
</html>