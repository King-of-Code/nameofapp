<div class="container-fluid content">
  <div class="form-group">
    <% if signed_in? %>
      <h4>Add a review:</h4>
      <%= form_for([@product, @product.comments.build]) do |f| %>
        <p>
          <%= f.label :body, "Comments" %><br>
          <%= f.text_area :body, placeholder: "Your review here", :title => "Please type in your review", :required => "required" %>
          <%= alert %>
        </p>
        <p>
          <div class="rating"></div>
        </p>  
        <p>
          <%= f.submit "Submit", class: "btn btn-secondary", :title => "Fill in review and rate with number of stars before submitting." %>
        </p>
      <% end %>
    <% end %>
  </div><!-- comment_form end -->
</div>