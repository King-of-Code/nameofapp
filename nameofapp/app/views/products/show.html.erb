<div class="container-fluid content">
  <div class="row">
    <div class="col-xs-6 col-md-3">
      <p>
        <%= image_tag(@product.image_url, class: "img-responsive") %>
      </p>
    </div>
    <div class="col-xs-6 col-md-3">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Price:</strong>
        <% @product.price %>
      </p>

      <p>Average Rating: 
        <div class="rated" data-score="<%= @product.average_rating %>">
        </div> 
      </p>
    </div>   
    <div class="col-xs-12 col-md-6">
      <%= render 'new_comment' %>
    </div>
    <div class="col-xs-6 col-md-3">
      <p>
        <%= render 'comments' %>
      </p>
    </div>
    <div class="col-xs-12 col-md-12 pagination_show_page">
      <p>
        <%= will_paginate @comments %>
      </p>
    </div>
    <div class="col-xs-12 col-md-12">
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
  </div>
</div>