<div class="container-fluid content products_list">
  <div class="row">
  	<h1>List of a few Products</h1>
  	<% cache(cache_key_for_products) do %>
    	<%= render :partial => "product", :collection => @products %>    <% end %>
  </div>
</div>

<br>

<% if can? :create, Product %>
	<%= link_to 'New Product', new_product_path %>
<% end %>
</div>