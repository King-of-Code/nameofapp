<!DOCTYPE html>
<html>

  <div class="content products">

    <p id="notice"><%= notice %></p>

    <h1>One of Many Products</h1>

    <div class="container-fluid">
      <div class="row">
        <% @products.each do |product| %>
          <%= render @product %>
        <% end %>
      </div>
    </div>

    <br>

    <%= link_to 'New Product', new_product_path %>
  </div>

</html>